generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
model Users {
username String @id
password String
token String
role String?
}
model Login {
  Loginid           Int         @id
  username          String      @db.VarChar(20)
  password          String      @db.VarChar(20)
  logintype         Int
  clientid          Int
  categoryid        Int
  projectid         Int
  logo              String      @db.VarChar(100)
}

model Project {
  projectid         Int         @id
  categoryid      Int
  mapid           Int
  projectname     String            @db.VarChar(30)
  areas_acres     Int
  location        String            @db.VarChar(25)
  state           String            @db.VarChar(25)
}

model Basemap {
  mapid             Int         @id
  mapname           String      @db.VarChar(30)
  maplink           String      @db.VarChar(50)
}

model Survey {
  surveyid        Int         @id
  projectid       Int
  lat             Float
  long            Float
  surveyname      String            @db.VarChar(20)
  date_of_survey  String
  zoom            Float
  zoom_min        Float
  zoom_max        Float
 
}

model ProjectCategory {
  categoryid        Int         @id
  categoryname      String      @db.VarChar(30)
  domain            String      @db.VarChar(50)
}

model Sources {
  sourceid          Int               @id
  surveyid          Int
  datatype          String            @db.VarChar(10)
  source_name       String            @db.VarChar(30)
  source_link       String            @db.VarChar(50)
  d_source          String            @db.VarChar(50)
}

model Reports {
  reportid        Int               @id
  surveyid        Int
  projectid       Int
  report_type     String            @db.VarChar(15)
  
}

model Vectorlayer {
  layerid           Int               @id
  sourceid          Int
  vectortype        String            @db.VarChar(10)
  layername         String            @db.VarChar(20)
  displayname       String            @db.VarChar(30)
  visibility        Int
  
}

model Downloads {
  downloadid      Int               @id
  surveyid        Int
  filetype        String            @db.VarChar(10)
 
}

model Point {
  pointlayerid    Int               @id
  layerid         Int
  color           String            @db.VarChar(10)
  radius          Int
  textfield       String
}

model Linestring {
  linestringlayerid Int               @id
  linewidth         Int
  color             String            @db.VarChar(10)
  attribute         String
  
}

model Polygon {
  polygonlayerid  Int               @id
  layerid         Int
  linewidth       Int
  linecolor       String            @db.VarChar(10)
  fillcolor       String            @db.VarChar(10)
  fillopacity     Int
  areaattribute   String            @db.VarChar(10)
  hover           Int
  textfield       String
}
  